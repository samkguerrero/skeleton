<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Register</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <style>
        .errorMsg {
            color: red;
        }
    </style>
</head>
<body>
        @model User
        <a style="float: right;" href="login">Login</a>
        <div class="container center-align">
            <h1 class="blue-text">Register to this cool site!</h1>
            <form class="left-align" asp-action="signup" asp-controller="Home" method="post">
                <br>
                <span class="errorMsg" asp-validation-for="Fname"></span>
                <br>
                <label asp-for="Fname"></label>
                <input asp-for="Fname">
                <br>

                <br>
                <span class="errorMsg" asp-validation-for="Lname"></span>
                <br>
                <label asp-for="Lname"></label>
                <input asp-for="Lname">
                <br>

                <br>
                <span class="errorMsg" asp-validation-for="Email"></span>
                <br>
                <label asp-for="Email"></label>
                <input asp-for="Email">
                <br>

                <br>
                <span class="errorMsg" asp-validation-for="Password"></span>
                <br>
                <label asp-for="Password"></label>
                <input asp-for="Password">
                <br>

                <br>
                <span class="errorMsg" asp-validation-for="ConfirmPassword"></span>
                <br>
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword">
                <br>

                <br>
                <input class="btn blue" type="submit" value="Sign up Now">
            </form>
        </div>
        
</body>
</html>