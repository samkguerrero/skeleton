<h3>Creat a New THING</h3>
@model Thing
<form asp-action="NewThing" asp-controller="Thing" method="post">
    <br>
    <span class="errorMsg" asp-validation-for="Name"></span>
    <br>
    <label asp-for="Name"></label>
    <input asp-for="Name">
    <br>

    <br>
    <span class="errorMsg" asp-validation-for="Date"></span>
    <br>
    <label asp-for="Date"></label>
    <input type="date" asp-for="Date">
    <br>

    <br>
    <input class="btn" type="submit" value="create">
</form>